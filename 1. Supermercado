/**Conociendo el gasto que un cliente realiza en un supermercado y la 
cantidad de dinero con la que esta pagando, calcule y muestre el vuelto 
**/

using System;
class gasto
	{
		static void Main (string[] args)
		{
			double totalVuelto = 0;
			double totalProducto = 0;
			double totalPago = 0;

			Console.Write("Introduzca el valor del articulo a cancelar: ");
			totalProducto = Convert.ToDouble(Console.ReadLine());

			Console.Write("Introduzca el monto cancelado por el cliente: ");
			totalPago = Convert.ToDouble(Console.ReadLine());

			totalVuelto = totalPago - totalProducto;
				Console.WriteLine("Su cambio es: " + totalVuelto);

		}
	}
